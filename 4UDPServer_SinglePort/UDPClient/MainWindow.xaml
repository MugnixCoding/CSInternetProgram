<Window x:Class="UDPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPClient"
        mc:Ignorable="d"
        Title="UDP 客戶端" Height="250" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10,30,0,50">
                <Label Content="詢問: " FontSize="30"/>
                <TextBox x:Name="Command_textbox" Width="300" FontSize="30" Margin="10,0,50,0"/>
                <Button x:Name="Send_button" Content="送出" FontSize="30" Width="100" Click="Send_button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                <Label Content="接收: " FontSize="30"/>
                <TextBox x:Name="Recieve_textbox" FontSize="30" Width="600" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
