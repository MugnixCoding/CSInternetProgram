<Window x:Class="TCPConnect_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPConnect_Client"
        mc:Ignorable="d"
        Title="TCP Client" Height="250" Width="600"
        Closed="Window_Closed">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10,30,0,50">
                <Label Content="伺服器IP: " FontSize="20"/>
                <TextBox x:Name="ServerIP_textbox" Width="200"  FontSize="20" Margin="0,0,30,0"/>

                <Label Content="伺服器Port: " FontSize="20"/>
                <TextBox x:Name="ServerPort_textbox" Width="100"  FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,30,0,0">
                <Label Content="使用者名稱: " FontSize="20"/>
                <TextBox x:Name="UserName_textbox" Width="200"  FontSize="20"/>
                <Button x:Name="Connect_button" Content="登入伺服器" FontSize="20" Margin="70,0,0,0" Click="Connect_button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
